<div class="but-combat-body">
    {{#if isCombat}}
    <div class="but-flex-list">
        {{#each combatants}}
        <div class="but-combatant {{#if this.is_dead}}but-dead-combatant{{/if}} but-flex-item">
            <div class="but-truncate">
                <a data-id="{{this.tokenId}}" class="combat_window_actor">{{this.token.name}}</a>
            </div>
            <div>
                <i class="fa fa-heart" aria-hidden="true"></i>
                {{#if this.max_hp}}
                {{this.current_hp}}/{{this.max_hp}}
               <i class="fas fa-shield-alt"></i>{{ this.ac.value }}
                {{/if}}
            </div>
        </div>

        {{/each}}
    </div>
    {{/if}}
    {{#unless isCombat}}
        <em>{{message}}</em>
    {{/unless}}

</div>
